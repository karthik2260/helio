      <form action="/" method="POST">
        <table class="table" id="userTable">
            <thead class="thead-dark">
                <tr class="bg-dark text-light">
                    <th>ID</th>
                    <th>Category name</th>
                    <th>Category Description</th>
                    <th>Listing</th>
                    <th>Action</th>
                </tr>
              </thead>
            <tbody> 
                <% category.forEach((category,index)=>{ %>
                    <tr>
                        <td><%= index +1 %> </td>
                        <td><%= category.CategoryName %></td>
                        <td><%= category.discription %></td>
                        <td>
                          <%  if(category.list==='listed'){ %>
                                <span class="text-success"><%= category.list %></span>
                                <% } else if(category.list==='unlisted'){ %>
                                    <span class="text-danger"><%= category.list %></span>
                                    <% } %>
                        </td>
                        <td>
                            <div>
                                <a href="/edit/<%= category._id %>" class="btn border-shadow shadow update">
                                 <span class="material-symbols-outlined">edit</span>
                                </a>
                                <a  class="'btn border-shadow shadow delete" data-id="<%= category._id %>">
                                    <span class="material-symbols-outlined"> delete</span>
                                  </a>
                                  <a href="/list?id=<%=category._id %>" class="btn border-shadow shadow visible">
                                    <span class="material-symbols-outlined"></span>
                                    <i class="fas fa-list"></i>
                                  </a>
                            </div>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
