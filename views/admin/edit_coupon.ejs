<script>
document.getElementById('couponForm').addEventListener('submit', function(event) {
  let isValid = true;

  // Clear previous errors
  document.querySelectorAll('.invalid-feedback').forEach(el => el.textContent = '');
  document.querySelectorAll('.form-control').forEach(el => el.classList.remove('is-invalid'));

  // Validate category code
  const couponcode = document.getElementById('couponcode');
  if (couponcode.value.trim() === '') {
    setError(couponcode, 'Category code is required.');
    isValid = false;
  }

  // Validate discount percentage
  const discountPercentage = document.getElementById('discountPercentage');
  if (discountPercentage.value < 10 || discountPercentage.value > 70) {
    setError(discountPercentage, 'Discount percentage must be between 10 and 70.');
    isValid = false;
  }

  // Validate expire date
  const expireDate = document.getElementById('expireDate');
  const currentDate = new Date().toISOString().split('T')[0];
  if (expireDate.value === '') {
    setError(expireDate, 'Expire date is required.');
    isValid = false;
  } else if (expireDate.value < currentDate) {
    setError(expireDate, 'Expire date cannot be in the past.');
    isValid = false;
  }

  // Validate min purchase amount
  const minPurchaseAmount = document.getElementById('minPurchaseAmount');
  if (minPurchaseAmount.value.trim() === '' || minPurchaseAmount.value <= 0) {
    setError(minPurchaseAmount, 'Min purchase amount must be greater than zero.');
    isValid = false;
  }

  if (!isValid) {
    event.preventDefault(); // Prevent form submission if validation fails
  }
});

function setError(element, message) {
  const errorElement = document.getElementById(element.id + '-error');
  element.classList.add('is-invalid');
  errorElement.textContent = message;
}

// Real-time validation (optional)
document.querySelectorAll('.form-control').forEach(input => {
  input.addEventListener('input', function() {
    // Clear errors on input
    this.classList.remove('is-invalid');
    const errorElement = document.getElementById(this.id + '-error');
    if (errorElement) {
      errorElement.textContent = '';
    }

    // Additional check for expire date to handle real-time past date validation
    if (this.id === 'expireDate') {
      const currentDate = new Date().toISOString().split('T')[0];
      if (this.value < currentDate) {
        setError(this, 'Expire date cannot be in the past.');
      }
    }
  });
});

