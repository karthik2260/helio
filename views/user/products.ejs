<script>
$(document).ready(function () {
    // Sort products
    $('#sort').change(function () {
        const sort = $(this).val();
        const brand = $('#shop').val();
        const word = $('#custom-search').val().trim();  // Get search keyword, if any

        $.ajax({
            url: '/prod',
            type: 'POST',
            data: { brand, sort, word },  // Include the search keyword in the request
            success: function (response) {
                displayProducts(response.products);
            },
            error: function () {
                window.location.href = '/error500';
            }
        });
    });

    // Brand filter
    $('#shop').change(function () {
        const brand = $(this).val();
        const sort = $('#sort').val();
        const word = $('#custom-search').val().trim();  // Get search keyword, if any

        $.ajax({
            url: '/prod',
            type: 'POST',
            data: { brand, sort, word },  // Include the search keyword in the request
            success: function (response) {
                displayProducts(response.products);
            },
            error: function () {
                window.location.href = '/error500';
            }
        });
    });

    // Search products
    let debounceTimeout;
$('#custom-search-button').click(function (e) {
    e.preventDefault();
    performSearch();  // Trigger search on button click
});

$('#custom-search').on('input', function () {
    clearTimeout(debounceTimeout); // Clear previous timeout
    debounceTimeout = setTimeout(performSearch, 300);  // Trigger search on typing with a delay
});

function performSearch() {
    const word = $('#custom-search').val().trim();
    const brand = $('#shop').val();  // Get the selected brand
    const sort = $('#sort').val();   // Get the selected sort

    if (!word) {
        alert("Please enter a keyword to search.");
        return;
    }

    $.ajax({
        url: '/search',
        type: 'POST',
        data: { word, brand, sort },  // Include brand and sort with the search keyword
        success: function (products) {
            displayProducts(products);
        },
        error: function () {
            window.location.href = '/error500';
        }
    });
}

// Function to display the products
function displayProducts(products) {
    const productContainer = $('.product-center');
    productContainer.empty();

    if (products.length === 0) {
        productContainer.append('<p>No products found</p>');
        return;
    }

    products.forEach(product => {
        const productHtml = `
            <div class="product-item">
                <div class="overlay">
                    <a href="/productdetail/${product._id}" class="product-thumb">
                        <img src="${product.images[0]}" alt="" />
                    </a>
                </div>
                <div class="product-info">
                    <span><a href="/productdetail/${product._id}">${product.product_name}</a></span>
                    ${product.offerPrice && product.offerPrice < product.price 
                        ? `<h4 class="product_details-offer-price">&#8377;${product.offerPrice}</h4>
                           <span class="product_details-original-price">M.R.P.: &#8377;${product.price}</span>
                           <span class="product_details-discount">(${Math.round(((product.price - product.offerPrice) / product.price) * 100)}% off)</span>`
                        : `<h4 class="product_details-offer-price">&#8377;${product.price}</h4>`
                    }
                    <h4>${product.brand}</h4>
                </div>
                <ul class="icons">
                    <li><a href="/wishlist/${product._id}"><i class="bx bx-heart"></i></a></li>
                    <li><a href="/productdetail/${product._id}"><i class="bx bx-search"></i></a></li>
                    <li><a href="/cart/${product._id}"><i class="bx bx-cart"></i></a></li>
                </ul>
            </div>
        `;
        productContainer.append(productHtml);
    });
}

});



    // Optional: Function to update pagination UI
    function updatePagination(pages, currentPage) {
    const paginationContainer = $('.pagination-container');
    paginationContainer.empty();

    if (pages > 1) {
        for (let i = 1; i <= pages; i++) {
            paginationContainer.append(`
                <a href="?page=${i}" class="page-btn ${currentPage === i ? 'active' : ''}">${i}</a>
            `);
        }
    }
}


    // Function to load products by page
    function loadProducts(page) {
        $.ajax({
            url: `/products?page=${page}`,
            type: 'GET',
            success: function (response) {
                displayProducts(response.products);
            },
            error: function () {
                window.location.href = '/error500';
            }
        });
    }



</script>


</body>

</html>