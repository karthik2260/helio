  <!-- All Products -->
  <section class="section all-products" id="products">
    <div class="top container">
     
      <select id="shop">
        <option name="cata" value="" selected disabled>category</option>
        <option name="cata" value="business">BUSINESS</option>
        <option name="cata" value="gaming">GAMING</option>
        <option name="cata" value="convertible">CONVERTIBLE</option>
        </select>
     
      <h1>
        
      </h1>
      <form>
        <select>
          <option value="1">Defualt Sorting</option>
          <option value="2">Sort By Price</option>
          <option value="3">Sort By Popularity</option>
          <option value="4">Sort By Sale</option>
          <option value="5">Sort By Rating</option>
        </select>
        <span><i class="bx bx-chevron-down"></i></span>
      </form>
      
    </div>
    
    <div class="product-center container">
      <% products.forEach(product=> { %>
        <div class="product-item">
          <div class="overlay">
            <a href="productdetail?id=<%= product._id %>" class="product-thumb">
              <img src="<%= product.images[0] %>" alt="" />
            </a>
          </div>
          <div class="product-info">
            <a href="/productdetail?id=<%= product._id %>"> <span>
                <%= product.product_name %>
              </span>
              <h4>
                <%= product.brand %>
              </h4>
              <h5>&#8377 <%= product.price %>
              </h5>
          </div>
         <ul class="icons">
              <li><i class="bx bx-heart"></i></li>
              <li><a href="/productdetail?id=<%=product._id  %>"><i class="bx bx-search"></i></a></li>
              <li><a href="cart/<%=product._id %>"><i class="bx bx-cart"></i></a></li>
            </ul>      
        </div>
        <% }) %>
