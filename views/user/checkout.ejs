                                fetch('/razorpayment', {
								method: 'post',
								headers: {
									'content-Type': 'application/json'
								},
								body: JSON.stringify({ totalamount,coupondiscount })
							}).then(res => res.json())
                            .then(res => {
                                const options = {
                                            "key": "rzp_test_iAqbez4gZElsL0",
