								headers: {
									'content-Type': 'application/json'
								},
								body: JSON.stringify({ data, paymentMethod,totalamount})
                            
							})
                            
                            .then(res => res.json())
                                    .then(res => { 
                                        
                                        if (res.status === 401) {
                                            
                                            toastr.error('Please add the Address to checkout');
