					console.log(selectedCoupon);
					
					if (selectedCoupon) {
						const couponCode = selectedCoupon.value;
						console.log(`Applying coupon: ${couponCode}`);

						// Send request to apply the selected coupon
						fetch('/applyCoupon', {
							method: "POST",
							headers: {
								'Content-Type': 'application/json'
							},
