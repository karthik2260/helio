<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Sign Up Form by Colorlib</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <!-- Font Icon -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="fonts/material-icon/css/material-design-iconic-font.min.css">

    <!-- Main css -->
    <link rel="stylesheet" href="/assests/css/login.css">
</head>
<body>

<section class="sign-in">
    <div class="container">
        <div class="signin-content">
            <div class="signin-image">
                <figure><img src="/assests/img/signin.jpg" alt="sign up image"></figure>
            </div>
            <div class="signin-form">
                <h4 class="form-title">Enter Your Email</h4>
                <form method="POST" class="register-form" action="/forgotemail" id="login-form">
                    <div class="form-group">
                        <label for="your_email"><i class="zmdi zmdi-account material-icons-name"></i></label>
                        <input type="email" name="email" id="your_email" placeholder="Your Email" value="arjun@gmail.com" />
                        <div class="error-message" id="email-error"></div>
                    </div>
                    <div class="form-group form-button">
                        <input type="submit" name="signin" id="signin" class="form-submit" value="Submit"/>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

<style>
    .error-message {
        color: red;
        font-size: 0.9em;
    }
</style>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
<script src="/assests/js/jquery.min.js"></script>

<script>
    document.getElementById('login-form').addEventListener('submit', function(event) {
        const email = document.getElementById('your_email').value;
        const emailError = document.getElementById('email-error');

        // Clear previous error message
        emailError.textContent = '';

        // Email validation regex pattern
        const emailPattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;

        // Validate email format
        if (!emailPattern.test(email)) {
            emailError.textContent = 'Please enter a valid email address';
            event.preventDefault(); // Prevent form submission
        }
    });
</script>
</body>
</html>
